{
  "containerDefinitions": [
    {
      "name": "nginx",
      "image": "<your nginx reverse proxy image URL here>",
      "memory": "256",
      "cpu": "256",
      "essential": true,
      "portMappings": [
        {
          "containerPort": "80",
          "protocol": "tcp"
        }
      ],
      "links": [
        "app"
      ]
    },
    {
      "name": "app",
      "image": "<your app image URL here>",
      "memory": "256",
      "cpu": "256",
      "essential": true
    }
  ],
  "volumes": [],
  "networkMode": "bridge",
  "placementConstraints": [],
  "family": "application-stack"
}
